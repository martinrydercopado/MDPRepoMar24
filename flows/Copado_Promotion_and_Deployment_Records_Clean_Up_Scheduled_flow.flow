        <locationX>924</locationX>
        <locationY>1092</locationY>
        <defaultConnector>
            <targetReference>Increment_Record_Counter</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>varRecordCounter</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <numberValue>5.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <isGoTo>true</isGoTo>
                <targetReference>Update_Promotion_Status</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
